<!DOCTYPE html>
<html>

<head>
    <% include partials/head %>
</head>

<body>

    <% include partials/headerConcise %>

        <div class="container-fluid">
            <div class="row" id="landing-image">
                <div class="col-sm-4"></div>
                <div id='center-div-signup' class="col-sm-4">

                    <h1>Create an Account</h1>
                    <p><span class="asterisk">&#42;</span>Required fields</p>
                    <form id="signup" method="POST" action="/users">
                      <div class="form-group">
                        <label>Name<span class="asterisk">&#42;</span></label>
                        <input name="user[name]" type="text" placeholder="<%= user.name %>" value="<%= user.name %>" required>
                      </div>

                      <div class="form-group">
                        <label>Email<span class="asterisk">&#42;</span></label>
                        <input name="user[email]" type="email" placeholder="<%= user.email %>" value="<%= user.email %>" required>
                      </div>

                      <div class="form-group">
                        <label>City</label>
                        <input name="user[city]" type="text" placeholder="<%= user.city %>" value="<%= user.city %>">
                      </div>

                      <div class="form-group">
                        <label>Favorite Trail</label>
                        <input name="user[favorite_trail]" type="text" placeholder="<%= user.favorite_trail %>" value="<%= user.favorite_trail %>">
                      </div>

                      <div class="form-group">
                        <label>Username<span class="asterisk">&#42;</span></label>
                        <input name="user[username]" type="text" placeholder="<%= user.username %>" value="<%= user.username %>" required>
                      </div>

                      <% if (info.userExists) { %>
                        <p><span class="bold error-message">
                          <%= info.existError %>
                          </span>
                        </p>
                      <% } %>

                      <div class="form-group">
                        <label>Password<span class="asterisk">&#42;</span></label>
                        <input name="user[password]" type="password" required>
                      </div>

                      <% if(info.passwordError) { %>
                          <% for(var item in info.error) { %>
                              <% for(var i = 0; i < info.error[item].length; i++) { %>
                                  <p><span class="bold error-message">
                                      <%= info.error[item][i].message %>
                                  </p></span>
                              <% } %>
                          <% } %>
                      <% } %>

                      <p>Password should contain at least four characters, <br>one letter, and one special character.</p>
                      <button type="submit">Join Now</button>
                    </form>



                </div>
            </div>
        </div>
</body>

</html>
